<Page
    x:Class="BookProject2.AddBooks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="TextBox" x:Key="MyTextBox">
            <Setter Property="Margin" Value="15 0 0 0" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Width" Value="auto" />
            <Setter Property="Height" Value="auto" />
        </Style>
    </Page.Resources>

    <Grid Margin="20">

        <TextBlock
            Margin="15 0 0 0"
            Text="Add New Books"
            Foreground="Gray"
            FontSize="30"
            FontWeight="Bold" />

        <StackPanel Margin="0 50 0 0">
            <TextBox x:ConnectionId='2'
                x:Name="NameOfBook"
                x:FieldModifier="public"
                PlaceholderText="Name Of Book?"
                Style="{StaticResource MyTextBox }" />

            <TextBox x:ConnectionId='3'
                x:Name="NameOfAuthor"
                x:FieldModifier="public"
                PlaceholderText="Name Of Author?"
                Style="{StaticResource MyTextBox }" />

            <TextBox x:ConnectionId='4'
                x:Name="NumberOfBook"
                x:FieldModifier="public"
                PlaceholderText="How much books do we adding?"
                Style="{StaticResource MyTextBox }" />

            <ComboBox x:ConnectionId='5'
                Margin="0 15 0 0"
                PlaceholderText="Pick Category"
                x:Name="MyCombo"
                FontSize="25"
                CornerRadius="25"
                                                            >

                <ComboBoxItem x:ConnectionId='7'
                    Content="Art And Design"
                    FontSize="20"
                    x:Name="ArtAndDesign" />

                <ComboBoxItem x:ConnectionId='8'
                    Content="kids"
                    FontSize="20"
                    x:Name="kids" />

                <ComboBoxItem x:ConnectionId='9'
                    Content="Fiction"
                    FontSize="20"
                    x:Name="Fiction" />
            </ComboBox>

            <Button x:ConnectionId='6'
                x:Name="AddBookNow"
                Content="Add Me"
                FontSize="32"
                Margin="0 20"
                Foreground="White"
                CornerRadius="25"
                                        >

                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Turquoise" />
                        <GradientStop Color="#FF15CE88" Offset="1" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Page>

