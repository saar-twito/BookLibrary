<Application
    x:Class="BookProject2.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="MyTextBlock">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="Width" Value="auto" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="22" />
        </Style>

        <Style TargetType="TextBlock" x:Key="OnChosenBookPage">
            <Setter Property="Foreground" Value="DarkGray" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="TextDecorations" Value="Underline" />
            <Setter Property="FontSize" Value="23" />
        </Style>

        <Style TargetType="TextBlock" x:Key="OnBindingChosenBookPage">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="19" />
        </Style>

        <Style TargetType="Button" x:Key="MyTakeMeButton">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Margin" Value="0 0 100 100" />
            <Setter Property="Height" Value="50" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="Content" Value="Take Me" />
            <Setter Property="Width" Value="auto" />
            <Setter Property="Foreground" Value="Snow" />
            <Setter Property="CornerRadius" Value="20" />
        </Style>

        <Style TargetType="TextBlock" x:Key="MyHeader">
            <Setter Property="Margin" Value="15 0 0 0" />
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style TargetType="TextBlock" x:Key="ListBoxItemTextBlockFirst">
            <Setter Property="FontSize" Value="25" />
            <Setter Property="Foreground" Value="Snow" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
        </Style>

        <Style TargetType="TextBlock" x:Key="ListBoxItemTextBlockSecond">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="Snow" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="10 0 0 0" />
        </Style>
    </Application.Resources>
</Application>
